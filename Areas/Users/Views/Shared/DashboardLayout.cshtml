
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DashboardLayout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@600&family=DM+Serif+Display:ital@0;1&family=Gloock&family=Nosifer&family=Noto+Sans+Kawi&family=Noto+Sans+TC:wght@500&family=Noto+Sans:wght@500&family=Open+Sans:wght@300;400;500;600&family=Poppins:wght@200&family=Raleway:wght@100;200;300;400&family=Roboto:wght@400;700&display=swap"
          rel="stylesheet">
    @*css*@
    <link href="~/Content/StyleSheet2.css" rel="stylesheet" />

    <style>
        main {
            background-color: #C2DED1;
            width: 100vw;
            height: 88vh;
        }

        .c-1 {
            width: 250px;
            height: 250px;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            position: relative;
            top: 20px;
            left: 30px;
            border-radius: 20px;
        }

        .c-2 {
            width: 250px;
            height: auto;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            position: relative;
            top: 20px;
            left: 30px;
            border-radius: 10px;
        }

        hr {
            width: 250px;
            position: relative;
            top: 20px;
            left: 30px;
            border: 0; /* Remove default border */
            border-top: 1px solid #000; /* Add a 2px solid black border for styling */
            margin: 1em 0; /* Add some margin for spacing */
            font-weight: bold; /* Make it bold */
        }

        .side .card {
            margin-bottom: 10px; /* Adjust the value to set the desired gap */
        }

        .c-2 span a {
            color: #00A9FF;
            position: relative;
            top: 2px;
            left: 7px;
            font-family: 'Baloo Bhai 2', sans-serif;
            font-size: 1.1rem;
            transition: 1s ease-in;
        }

            .c-2 span a:hover {
                text-decoration: none;
                color: black;
            }

        .container {
            box-shadow: rgba(0, 0, 0, 0.3) 0px 19px 38px, rgba(0, 0, 0, 0.22) 0px 15px 12px;
            width: 70vw;
            height: 75vh;
            position: relative;
            bottom: 86%;
            left: 10%;
            border-radius: 10px;
        }

        .wrap {
            padding: 100px;
        }

        .image--cover {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            object-position: center;
        }

        .w-1 {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <nav class="cont">
        <div class="logo-section">
            <img class="logo" src="~/Images/mainlogo.png" alt="logo">
        </div>
        <img class="hamburger" src="~/Images/hamburger.png" alt="hamburger">
        <ul class="nav-list">
            <li>
                <a href="Index/Stud">Skill Test</a>
            </li>

            <li>
                <a href="#">Premium Service</a>
            </li>
            <li>
                @Html.ActionLink("Logout", "logout", "Stud")
            </li>
        </ul>
    </nav>

    <main>

        <div class="card c-1">
            <div class="card-body w-1">
                <div class="wrap">
                    <img src="~/Images/Profile.jpg" alt="" class="image--cover" />
                </div>
            </div>
        </div>
        <hr />
        <div class="side">
            <div class="card c-2">
                <div class="card-body">

                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                    </svg>
                    <span><a href="#">Profile</a></span>
                </div>
            </div>

            <div class="card c-2">
                <div class="card-body">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-laptop" viewBox="0 0 16 16">
                        <path d="M13.5 3a.5.5 0 0 1 .5.5V11H2V3.5a.5.5 0 0 1 .5-.5zm-11-1A1.5 1.5 0 0 0 1 3.5V12h14V3.5A1.5 1.5 0 0 0 13.5 2zM0 12.5h16a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 12.5" />
                    </svg>
                    <span><a href="#">Exam</a></span>

                </div>
            </div>

            <div class="card c-2">
                <div class="card-body">

                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-journal-check" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10.854 6.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 8.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                        <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2" />
                        <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z" />
                    </svg>
                    <span><a href="#">Result</a></span>

                </div>
            </div>

            <div class="card c-2">
                <div class="card-body">

                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-mortarboard-fill" viewBox="0 0 16 16">
                        <path d="M8.211 2.047a.5.5 0 0 0-.422 0l-7.5 3.5a.5.5 0 0 0 .025.917l7.5 3a.5.5 0 0 0 .372 0L14 7.14V13a1 1 0 0 0-1 1v2h3v-2a1 1 0 0 0-1-1V6.739l.686-.275a.5.5 0 0 0 .025-.917l-7.5-3.5Z" />
                        <path d="M4.176 9.032a.5.5 0 0 0-.656.327l-.5 1.7a.5.5 0 0 0 .294.605l4.5 1.8a.5.5 0 0 0 .372 0l4.5-1.8a.5.5 0 0 0 .294-.605l-.5-1.7a.5.5 0 0 0-.656-.327L8 10.466z" />
                    </svg>
                    <span><a href="#">Cource</a></span>

                </div>
            </div>
        </div>

        @*Side*@
        <div class="container">
            <div>
                @RenderBody()
            </div>

        </div>
    </main>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>