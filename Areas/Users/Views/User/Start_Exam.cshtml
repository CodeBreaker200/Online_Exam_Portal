@model List<Online_Exam_Portal.Models.ExamQuestion>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Start_Exam</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@600&family=DM+Serif+Display:ital@0;1&family=Gloock&family=Nosifer&family=Noto+Sans+Kawi&family=Noto+Sans+TC:wght@500&family=Noto+Sans:wght@500&family=Open+Sans:wght@300;400;500;600&family=Poppins:wght@200&family=Raleway:wght@100;200;300;400&family=Roboto:wght@400;700&display=swap"
          rel="stylesheet">
    @*css*@
    <link href="~/Content/StyleSheet2.css" rel="stylesheet" />

    @*JS*@

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>




    <style>

        .boxs {
            width: 20vw;
            height: 45vh;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            margin-top: 40px;
            margin-left: 50px;
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            flex-wrap: wrap;
        }

        .box1 {
            width: 40px;
            height: 40px;
            background-color: #4477CE;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 22px;
        }

        .card {
            width: 60vw;
            height: 60vh;
            margin-top: 40px;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        }

        .container-fluid {
            display: flex;
            justify-content: space-around;
        }

        .question-container {
            max-height: 65vh;
            overflow-y: auto;
        }

        .question-card {
            width: 60vw;
            height: 60vh;
            margin-top: 20px;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        }

        .vl {
            border-left: 2px solid black;
            height: 500px;
        }

        .main-container {
            box-shadow: rgba(6, 24, 44, 0.4) 0px 0px 0px 2px, rgba(6, 24, 44, 0.65) 0px 4px 6px -1px, rgba(255, 255, 255, 0.08) 0px 1px 0px inset;
            padding: 20px;
        }

        .btn-primary {
            width: 20vw;
            margin: auto;
        }
    </style>


</head>
<body>
    <nav class="cont">
        <div class="logo-section">
            <img class="logo" src="~/Images/mainlogo.png" alt="logo">
        </div>
        <img class="hamburger" src="~/Images/hamburger.png" alt="hamburger">
        <ul class="nav-list">

            <li>
                <a href="#">Premium Service</a>
            </li>
            <li>
                <a href="#">Logout</a>
            </li>
            <li>
                Welcome, @Session["fullname"]
            </li>
        </ul>
    </nav>

    <main class="container-fluid my-4">
        <aside class="boxs">
            <div class="box1 text-white open-question-button">1</div>
            <div class="box1 text-white open-question-button">2</div>
            <div class="box1 text-white open-question-button">3</div>
            <div class="box1 text-white open-question-button">4</div>
            <div class="box1 text-white open-question-button">5</div>
            <div class="box1 text-white open-question-button">6</div>
            <div class="box1 text-white open-question-button">7</div>
            <div class="box1 text-white open-question-button">8</div>
            <div class="box1 text-white open-question-button">9</div>
            <div class="box1 text-white open-question-button">10</div>
        </aside>

        <div class="vl"></div>

        <div class="main-container">
            @using (Html.BeginForm("Start_Exam", "User", FormMethod.Post))
            {
                @*int studentId = Session["student_id"] != null ? (int)Session["student_id"] : 0;
                @Html.Hidden("student_id", studentId)*@
                <div class="question-container">
                    @{
                        int questionNumber = 1;
                    }
                    @foreach (var question in Model)
                    {
                        <div class="card question-card">
                            <div class="card-header">
                                <span>Question @questionNumber :</span><h4>@question.question_text</h4>
                                @Html.Hidden("question_id_" + question.question_id, question.question_id)

                            </div>
                            <div class="card-body">
                                <div>

                                    <label class="form-control">
                                        <input type="radio" name="option@question.Id" value="1" /> Option 1: @question.option_1
                                    </label>
                                    <br />
                                    <label class="form-control">
                                        <input type="radio" name="option@question.Id" value="2" /> Option 2: @question.option_2
                                    </label>
                                    <br />
                                    <label class="form-control">
                                        <input type="radio" name="option@question.Id" value="3" /> Option 3: @question.option_3
                                    </label>
                                    <br />
                                    <label class="form-control">
                                        <input type="radio" name="option@question.Id" value="4" /> Option 4: @question.option_4
                                    </label>
                                </div>
                            </div>
                        </div>
                        questionNumber++;
                    }
                    <div>
                        <button class="btn btn-primary my-4 btn-block" type="submit">Submit Exam</button>
                    </div>
                </div>
            }
        </div>



        <div>@ViewBag.msg</div>

    </main>

</body>
</html>
